<!-- app/views/carts/index.html.erb -->

<h1>Carts</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Total Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.user.email %></td>
        <td><%= number_to_currency(cart.total_price) %></td>
        <td><%= link_to 'Show', cart_path(cart) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
